{
  "version": 2,
  "installCommand": "pnpm install",
  "buildCommand": "pnpm -F client build && pnpm -F server build",
  "devCommand": "pnpm concurrently \"pnpm -F client dev\" \"pnpm -F server dev\"",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    },
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ]
}
